<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2dp"
        android:padding="5dp"
        >
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView
                android:padding="8dp"
                android:textSize="18sp"
                android:id="@+id/poster"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginLeft="100dp"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"/>

        <TextView
                android:layout_below="@id/poster"
                android:padding="8dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginLeft="100dp"
                android:id="@+id/post_main"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                />
        <TextView
                android:layout_below="@id/post_main"
                android:padding="8dp"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginLeft="100dp"
                android:id="@+id/post_time"
                android:textStyle="italic"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
        />

        <ImageView
                android:id="@+id/card_initial"
                android:layout_marginLeft="20dp"
                android:layout_width="50dp"
                android:layout_marginTop="20dp"
                android:layout_height="60dp"/>

        <Button android:id="@+id/comment_btn"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/post_time"
                android:layout_below="@+id/post_main"
                android:text="- -"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_below="@id/comment_btn"
                android:padding="8dp"
                android:textSize="18sp"
                android:layout_marginLeft="100dp"
                android:id="@+id/liked_by"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
        />
        <TextView
                android:layout_below="@id/liked_by"
                android:padding="8dp"
                android:textSize="18sp"
                android:layout_marginLeft="100dp"
                android:id="@+id/post_comment"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
        />

    </RelativeLayout>


</androidx.cardview.widget.CardView>